<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Space+Grotesk:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <style>
        * {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            background: #0f172a;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Space Grotesk', sans-serif;
        }
        
        /* Gradient Text */
        .gradient-text {
            background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 50%, #f472b6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradient-shift 3s ease infinite;
            background-size: 200% 200%;
        }
        
        @keyframes gradient-shift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        /* Glass morphism */
        .glass {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        /* Floating Animation */
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-20px) rotate(2deg); }
            66% { transform: translateY(-10px) rotate(-2deg); }
        }
        
        .float-animation {
            animation: float 6s ease-in-out infinite;
        }
        
        .float-delay-1 { animation-delay: 1s; }
        .float-delay-2 { animation-delay: 2s; }
        
        /* Glow Effect */
        .glow {
            box-shadow: 0 0 20px rgba(96, 165, 250, 0.5), 0 0 40px rgba(96, 165, 250, 0.3);
        }
        
        /* Input Focus Effect */
        .input-glow:focus {
            box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.3);
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }
        
        ::-webkit-scrollbar-track {
            background: #1e293b;
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #60a5fa, #a78bfa);
            border-radius: 10px;
        }
    </style>
</head>
<body class="bg-slate-900 text-white">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Animated Background -->
        <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500/30 rounded-full blur-3xl float-animation"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-500/30 rounded-full blur-3xl float-animation float-delay-1"></div>
        <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-pink-500/20 rounded-full blur-3xl float-animation float-delay-2"></div>
        
        <div class="max-w-2xl w-full relative z-10" data-aos="zoom-in" data-aos-duration="800">
            <!-- Logo Section -->
            <div class="text-center mb-8">
                <a href="/" class="inline-block">
                    <div class="w-24 h-24 bg-gradient-to-br from-blue-600 via-purple-600 to-pink-600 rounded-3xl flex items-center justify-center mx-auto mb-6 glow transform hover:scale-110 transition-all duration-300">
                        <span class="text-4xl font-black text-white">P</span>
                    </div>
                </a>
                <h2 class="text-4xl font-black mb-2">
                    Join <span class="gradient-text">PHOTON</span>
                </h2>
                <p class="text-gray-400 text-lg">
                    Create your account to start your preparation journey
                </p>
            </div>
            
            <!-- Register Card -->
            <div class="glass rounded-3xl p-8 shadow-2xl">
                <% if (locals.error) { %>
                    <div class="bg-red-500/10 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl mb-6 flex items-center" role="alert" data-aos="fade-down">
                        <i class="fas fa-exclamation-circle mr-3 text-xl"></i>
                        <span><%= error %></span>
                    </div>
                <% } %>
                
                <form action="/auth/register" method="POST" class="space-y-6">
                    <!-- Personal Information Section -->
                    <div class="mb-6" data-aos="fade-up" data-aos-delay="100">
                        <h3 class="text-xl font-bold mb-4 flex items-center">
                            <i class="fas fa-user-circle text-blue-400 mr-3"></i>
                            Personal Information
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Full Name -->
                            <div>
                                <label for="name" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Full Name
                                </label>
                                <input 
                                    id="name" 
                                    name="name" 
                                    type="text" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 transition-all duration-300" 
                                    placeholder="Enter your full name"
                                >
                            </div>
                            
                            <!-- Email -->
                            <div>
                                <label for="email" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Email Address
                                </label>
                                <input 
                                    id="email" 
                                    name="email" 
                                    type="email" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 transition-all duration-300" 
                                    placeholder="your.email@example.com"
                                >
                            </div>
                            
                            <!-- Phone -->
                            <div class="md:col-span-2">
                                <label for="phone" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Phone Number
                                </label>
                                <input 
                                    id="phone" 
                                    name="phone" 
                                    type="tel" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 transition-all duration-300" 
                                    placeholder="+91 XXXXXXXXXX"
                                >
                            </div>
                        </div>
                    </div>
                    
                    <!-- Academic Information Section -->
                    <div class="mb-6" data-aos="fade-up" data-aos-delay="200">
                        <h3 class="text-xl font-bold mb-4 flex items-center">
                            <i class="fas fa-graduation-cap text-purple-400 mr-3"></i>
                            Academic Information
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Class -->
                            <div>
                                <label for="class" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Class
                                </label>
                                <select 
                                    id="class" 
                                    name="class" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white focus:outline-none focus:border-purple-500 transition-all duration-300"
                                >
                                    <option value="" class="bg-slate-800">Select Class</option>
                                    <option value="9" class="bg-slate-800">Class 9</option>
                                    <option value="10" class="bg-slate-800">Class 10</option>
                                    <option value="11" class="bg-slate-800">Class 11</option>
                                    <option value="12" class="bg-slate-800">Class 12</option>
                                    <option value="dropper" class="bg-slate-800">Dropper</option>
                                </select>
                            </div>
                            
                            <!-- Course -->
                            <div>
                                <label for="course" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Course
                                </label>
                                <select 
                                    id="course" 
                                    name="course" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white focus:outline-none focus:border-purple-500 transition-all duration-300"
                                >
                                    <option value="" class="bg-slate-800">Select Course</option>
                                    <option value="jee" class="bg-slate-800">JEE Advanced</option>
                                    <option value="neet" class="bg-slate-800">NEET Medical</option>
                                    <option value="foundation" class="bg-slate-800">Foundation</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Account Security Section -->
                    <div class="mb-6" data-aos="fade-up" data-aos-delay="300">
                        <h3 class="text-xl font-bold mb-4 flex items-center">
                            <i class="fas fa-shield-alt text-green-400 mr-3"></i>
                            Account Security
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Photon ID -->
                            <div>
                                <label for="photon_id" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Create Photon ID
                                </label>
                                <input 
                                    id="photon_id" 
                                    name="photon_id" 
                                    type="text" 
                                    required 
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-green-500 transition-all duration-300" 
                                    placeholder="Choose a unique ID"
                                >
                                <p class="text-xs text-gray-500 mt-1">This will be your login username</p>
                            </div>
                            
                            <!-- Password -->
                            <div>
                                <label for="password" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Password
                                </label>
                                <input 
                                    id="password" 
                                    name="password" 
                                    type="password" 
                                    required 
                                    minlength="8"
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-green-500 transition-all duration-300" 
                                    placeholder="Create a strong password"
                                >
                                <p class="text-xs text-gray-500 mt-1">Min. 8 characters</p>
                            </div>
                            
                            <!-- Confirm Password -->
                            <div>
                                <label for="confirmPassword" class="block text-sm font-semibold text-gray-300 mb-2">
                                    Confirm Password
                                </label>
                                <input 
                                    id="confirmPassword" 
                                    name="confirmPassword" 
                                    type="password" 
                                    required 
                                    minlength="8"
                                    class="input-glow w-full px-4 py-3 bg-white/5 border-2 border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-green-500 transition-all duration-300" 
                                    placeholder="Confirm your password"
                                >
                                <p class="text-xs text-gray-500 mt-1">Must match password</p>
                            </div>
                        </div>
                    </div>

                    <!-- Terms & Conditions -->
                    <div class="flex items-start" data-aos="fade-up" data-aos-delay="400">
                        <input 
                            id="terms" 
                            name="terms" 
                            type="checkbox" 
                            required 
                            class="h-5 w-5 mt-0.5 text-blue-600 focus:ring-blue-500 border-gray-600 rounded bg-white/5"
                        >
                        <label for="terms" class="ml-3 block text-sm text-gray-400">
                            I agree to the <a href="#" class="text-blue-400 hover:text-blue-300">Terms and Conditions</a> and <a href="#" class="text-blue-400 hover:text-blue-300">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div data-aos="fade-up" data-aos-delay="500">
                        <button 
                            type="submit" 
                            class="w-full flex justify-center items-center py-4 px-4 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 rounded-xl font-bold text-lg text-white hover:shadow-2xl hover:scale-105 transition-all duration-300 glow"
                        >
                            <i class="fas fa-user-plus mr-3"></i>
                            Create Account
                        </button>
                    </div>
                </form>
                
                <!-- Divider -->
                <div class="relative my-8" data-aos="fade-up" data-aos-delay="600">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-white/10"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-slate-900/50 text-gray-400 font-medium">OR</span>
                    </div>
                </div>
                
                <!-- Login Link -->
                <div class="text-center" data-aos="fade-up" data-aos-delay="700">
                    <p class="text-gray-400">
                        Already have an account? 
                        <a href="/auth/login" class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 hover:from-blue-300 hover:to-purple-300 transition-all">
                            Sign in
                        </a>
                    </p>
                </div>
                
                <!-- Back to Home -->
                <div class="text-center mt-6" data-aos="fade-up" data-aos-delay="800">
                    <a href="/" class="inline-flex items-center text-gray-500 hover:text-gray-300 transition-colors text-sm">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Home
                    </a>
                </div>
            </div>
            
            <!-- Security Badge -->
            <div class="mt-8 text-center" data-aos="fade-up" data-aos-delay="900">
                <div class="inline-flex items-center px-4 py-2 bg-white/5 rounded-full border border-white/10">
                    <i class="fas fa-database text-green-400 mr-2"></i>
                    <span class="text-sm text-gray-400">Powered by Turso Database</span>
                </div>
            </div>
        </div>
    </div>

    <!-- AOS Animation -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- JavaScript -->
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-out-cubic',
            once: true
        });
    </script>
</body>
</html>
