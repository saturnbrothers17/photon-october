    <!-- JavaScript for Animations -->
    <script>
        // Scroll animation observer
        document.addEventListener('DOMContentLoaded', function() {
            // Header scroll effect
            const header = document.getElementById('main-header');
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    header.classList.add('shadow-xl', 'bg-white/90', 'backdrop-blur-sm');
                    header.classList.remove('shadow-lg');
                } else {
                    header.classList.remove('shadow-xl', 'bg-white/90', 'backdrop-blur-sm');
                    header.classList.add('shadow-lg');
                }
            });
            
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('opacity-0');
                mobileMenu.classList.toggle('invisible');
                mobileMenu.classList.toggle('translate-y-0');
                mobileMenu.classList.toggle('translate-y-2');
                
                // Rotate hamburger icon
                const icon = mobileMenuButton.querySelector('i');
                if (mobileMenu.classList.contains('opacity-0')) {
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                } else {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                }
            });
            
            // Close mobile menu when clicking outside
            document.addEventListener('click', function(event) {
                if (!header.contains(event.target) && !mobileMenu.classList.contains('opacity-0')) {
                    mobileMenu.classList.add('opacity-0', 'invisible', 'translate-y-2');
                    mobileMenu.classList.remove('translate-y-0');
                    const icon = mobileMenuButton.querySelector('i');
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
            
            // Faculty Portal Login Modal
            const facultyPortalLink = document.getElementById('faculty-portal-link');
            const mobileFacultyPortalLink = document.getElementById('mobile-faculty-portal-link');
            const facultyLoginModal = document.getElementById('facultyLoginModal');
            const closeFacultyModal = document.getElementById('closeFacultyModal');
            
            // Open modal when clicking on Faculty Portal link
            facultyPortalLink.addEventListener('click', function(e) {
                e.preventDefault();
                facultyLoginModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden'; // Prevent background scrolling
            });
            
            // Open modal when clicking on mobile Faculty Portal link
            mobileFacultyPortalLink.addEventListener('click', function(e) {
                e.preventDefault();
                facultyLoginModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden'; // Prevent background scrolling
                // Close mobile menu
                mobileMenu.classList.add('opacity-0', 'invisible', 'translate-y-2');
                mobileMenu.classList.remove('translate-y-0');
                const icon = mobileMenuButton.querySelector('i');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
            });
            
            // Close modal when clicking on close button
            closeFacultyModal.addEventListener('click', function() {
                facultyLoginModal.classList.add('hidden');
                document.body.style.overflow = ''; // Re-enable scrolling
            });
            
            // Close modal when clicking outside of it
            facultyLoginModal.addEventListener('click', function(event) {
                if (event.target === facultyLoginModal) {
                    facultyLoginModal.classList.add('hidden');
                    document.body.style.overflow = ''; // Re-enable scrolling
                }
            });
            
            // Handle form submission
            const facultyLoginForm = document.getElementById('facultyLoginForm');
            facultyLoginForm.addEventListener('submit', function(e) {
                // Form will submit normally, but we can add any client-side validation here if needed
            });
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });
            
            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });
            
            // Add floating animation to elements with 'floating' class
            const floatingElements = document.querySelectorAll('.floating');
            floatingElements.forEach((el, index) => {
                // Add slight delay to each element for staggered effect
                el.style.animationDelay = `${index * 0.2}s`;
            });
        });
    </script>
